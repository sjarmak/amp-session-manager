{
  "name": "@ampsm/desktop",
  "version": "0.1.0",
  "main": "dist/main.js",
  "scripts": {
    "rebuild:native": "npx electron-rebuild --force --only better-sqlite3 || echo 'Electron rebuild completed with warnings'",
    "dev": "pnpm rebuild:native && tsc && concurrently \"vite\" \"env -u ELECTRON_RUN_AS_NODE pnpm exec electron dist/main.js\"",
    "build": "pnpm rebuild:native && node build-preload.js && tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "echo 'No linting configured'"
  },
  "dependencies": {
    "@ampsm/bench-core": "workspace:*",
    "@ampsm/core": "workspace:*",
    "@ampsm/types": "workspace:*",
    "@heroicons/react": "^2.2.0",
    "date-fns": "^2.30.0",
    "react-diff-viewer-continued": "^3.4.0",
    "react-markdown": "^10.1.0",
    "recharts": "^2.8.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@tailwindcss/typography": "^0.5.16",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.0.0",
    "electron": "32.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.0.0",
    "vite": "^5.0.0"
  },
  "build": {
    "electronVersion": "32.0.0",
    "npmRebuild": false,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*",
      "**/*.node"
    ],
    "files": [
      "dist/",
      "node_modules/",
      "!node_modules/.pnpm/**"
    ]
  }
}
