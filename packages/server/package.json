{
  "name": "@ampsm/server",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ampsm-server": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --dts --format esm --target node20",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "echo 'No linting configured'"
  },
  "dependencies": {
    "@ampsm/core": "workspace:*",
    "@ampsm/types": "workspace:*",
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.0.0",
    "fastify": "^5.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2"
  }
}
